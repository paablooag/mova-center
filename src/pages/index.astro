---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
import Team from '../components/Team.astro';
import Reviews from '../components/Reviews.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const siteUrl = Astro.site?.href || 'https://tu-subdominio.com'; // Actualiza con tu URL real

// Structured Data JSON-LD para LocalBusiness
const structuredData = {
	"@context": "https://schema.org",
	"@type": "SportsActivityLocation",
	"name": "MOVA CENTER",
	"description": "Centro de entrenamiento funcional en Granada. Sesiones grupales, recuperación de lesiones y entrenamiento de fuerza.",
	"image": `${siteUrl}/logo-fondo.jpg`,
	"address": {
		"@type": "PostalAddress",
		"streetAddress": "Avenida de Don Bosco, 19",
		"addressLocality": "Granada",
		"postalCode": "18007",
		"addressRegion": "Andalucía",
		"addressCountry": "ES"
	},
	"geo": {
		"@type": "GeoCoordinates",
		"addressLocality": "Granada",
		"postalCode": "18007"
	},
	"url": siteUrl,
	"priceRange": "€€",
	"openingHoursSpecification": [
		{
			"@type": "OpeningHoursSpecification",
			"dayOfWeek": [
				"Monday",
				"Tuesday",
				"Wednesday",
				"Thursday",
				"Friday"
			],
			"opens": "07:00",
			"closes": "22:00"
		}
	],
	"sameAs": [
		"https://www.instagram.com/mova.center/"
	],
	"aggregateRating": {
		"@type": "AggregateRating",
		"ratingValue": "5",
		"reviewCount": "10"
	}
};
---

<Layout>
	{/* Structured Data JSON-LD */}
	<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
	
	<main>
		<Hero />
		<About />
		<Services />
		<Team />
		<Reviews />
		<Contact />
	</main>
	<Footer />
</Layout>

